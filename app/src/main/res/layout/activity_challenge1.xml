<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/witebg"
    android:layout_height="match_parent"
    tools:context=".Challenge1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Problem Statement:"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/ps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="38sp"

            android:textSize="15sp">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginVertical="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#D5D5D5"
            android:hint="Input code here"
            android:textColor="#234564" />


        <EditText
            android:id="@+id/stdin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="220dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#D5D5D5"
            android:hint="Enter User input (if required)" />


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="280dp"
            android:layout_marginStart="150dp"
            android:onClick="runCompile"
            android:text="RUN" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="490dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expected Output:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:text="Your Output:"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_expected"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginVertical="30dp"
            android:background="#4FFFE14A"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="180dp"
            android:scrollbars = "vertical"
            android:layout_height="100dp"
            android:layout_marginVertical="30dp"
            android:layout_marginStart="200dp"
            android:background="#FFFFFF"
            android:textSize="16sp" />

    </RelativeLayout>


    </RelativeLayout>