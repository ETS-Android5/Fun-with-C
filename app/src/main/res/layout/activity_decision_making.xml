            android:fontFamily="sans-serif-condensed"
            android:text="Example:"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></TextView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/photo_view2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/h3232t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/nestedif"
            android:textColor="#9F0407FF"
            android:textStyle="bold"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10sp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="A nested if in C is an if statement that is the target of another if statement. Nested if statements mean an if statement inside another if statement.
            \nIllustraton:\nif(condition1)\n{\n//Executes if condition 1 is true.\nif(condition2)\n{\n//Executes if condition 2 is true.\n
}\n }\n"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="10sp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:text="Example:"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp">

