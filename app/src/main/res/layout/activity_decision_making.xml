                android:layout_marginRight="10dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/h3232tasda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/ifelseifladder"
            android:textColor="#9F0407FF"
            android:textStyle="bold"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10sp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="if-else ifladder is executed from top to bottom, in the ladder as soon as the condition becomes true rest all conditions are bypassed. If no conditions are true else condition is executed at last. else statement is optional in C."></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="10sp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:text="Example:"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
