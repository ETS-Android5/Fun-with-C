<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CC_Score">

    <TextView
        android:id="@+id/idTVScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:padding="3dp"
        android:text="           Your Score is"
        android:textAllCaps="false"
        android:textColor="#129C24"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idBtnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="70dp"
        android:layout_marginStart="70dp"
        android:backgroundTint="#817DFA"
        android:text="Quiz Menu"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idBtnRestartQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="70dp"
        android:layout_marginStart="230dp"
        android:backgroundTint="#0AE397"
        android:text="Restart Quiz"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="17dp" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>