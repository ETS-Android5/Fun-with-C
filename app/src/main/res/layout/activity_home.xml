<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_end_color"
    android:orientation="vertical"
    tools:context=".HomeActivity">


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="124dp"

        android:background="#6AFF9B06"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/roboto_black"
            android:text="Weclome, Happy Learning!"
            android:textColor="#FFFFFF"
            android:textSize="27sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="379dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/challenges"
            android:layout_width="190dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:background="#F08E24AA"
            android:scaleX="1.0"
            android:scaleY="1.1"
            android:src="@drawable/pchalenge" />

        <ImageView
            android:id="@+id/onlin_resources"
            android:layout_width="190dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:background="#A1FB0A0A"
            android:scaleY="1.1"
            android:src="@drawable/referon" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="189dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="309dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView

            android:id="@+id/view_lesson"
            android:layout_width="190dp"
            android:layout_height="180dp"
            android:scaleY="1.1"
            android:scaleX="1.0"
            android:layout_marginStart="10dp"
            android:background="#9C4548FF"
            android:src="@drawable/lesson" />

        <ImageView
            android:id="@+id/takeQuiz"
            android:layout_width="190dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:background="#D01D5101"
            android:scaleY="1.1"
            android:src="@drawable/qubg" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_gravity="center"

        android:layout_marginTop="66dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="sans-serif"
        android:text=" \u0022The only way to learn a new programming language is by writing programs in it. \u0022\n"
        android:textColor="#48686363"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_gravity="center"

        android:layout_marginStart="152dp"
        android:fontFamily="sans-serif"
        android:text="                          -Dennis Ritchie"
        android:textColor="#48686363"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>